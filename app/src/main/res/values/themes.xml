<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.Calculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color (used for status bar and navigation bar) -->
        <item name="colorPrimary">#fafafa</item>
        <item name="colorPrimaryVariant">#e0e0e0</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Background color -->
        <item name="android:colorBackground">#fafafa</item>
        <item name="colorSurface">#fafafa</item>
        <item name="colorOnSurface">#000000</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#757575</item>
        <!-- Button styles -->
        <item name="buttonStyle">@style/CalculatorButtonStyle</item>
    </style>

    <style name="Theme.Calculator" parent="Base.Theme.Calculator" />

    <!-- Button style for the calculator -->
    <style name="CalculatorButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#000000</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
</resources>
