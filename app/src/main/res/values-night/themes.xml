<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.Calculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color (used for status bar and navigation bar) -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryVariant">#2b2e34</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">#a0b2dd</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Background color -->
        <item name="android:colorBackground">#000000</item>
        <item name="colorSurface">#000000</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#CCCCCC</item>
        <!-- Button styles -->
        <item name="buttonStyle">@style/CalculatorButtonStyle</item>
    </style>

    <style name="Theme.Calculator" parent="Base.Theme.Calculator" />

    <!-- Button style for the calculator -->
    <style name="CalculatorButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">24sp</item> <!-- Default text size for buttons -->
    </style>

    <!-- Number button style -->
    <style name="CalculatorNumberButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#000000</item>
        <item name="android:textSize">24sp</item> <!-- Text size for number buttons -->
    </style>

</resources>
